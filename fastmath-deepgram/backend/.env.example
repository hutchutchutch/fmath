# Deepgram API Key
# Get yours at https://console.deepgram.com/
# Not needed if USE_DEEPGRAM_SIMULATOR is true
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Server Port (optional, defaults to 3001)
PORT=3001

# Deepgram Simulator Settings
# Set to 'true' to use local WebSocket simulator instead of real Deepgram API
USE_DEEPGRAM_SIMULATOR=true

# Port for the Deepgram simulator WebSocket server (optional, defaults to 8080)
DEEPGRAM_SIMULATOR_PORT=8080